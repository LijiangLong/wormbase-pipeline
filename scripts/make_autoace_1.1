    $rs = `rsh ics-sparc1 \"cd $autodir/release ; tar -hcf database.$dbname.4-$i.tar $tarfiles[$i]\"`;
    push (@MESSAGES,"*Makedistr: made  tar file database.$dbname.4-$i.tar\n");
