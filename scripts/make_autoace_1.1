#--------------------------------
# Check output signals from every 
# operation.
# Dies if something goes wrong
#
sub chksignal {
  my $sig = shift;
  $retvalue = $sig >> 8;
  $signal = $sig & 0xff;
  if ($retvalue != 0) {
    print LOGFILE "* Fatal error $retvalue\n"; close LOGFILE; exit 0;
  } else {
    printf LOGFILE (" return value $retvalue - signal $signal at %s\n", scalar localtime);
  }
}


