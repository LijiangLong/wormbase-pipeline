  print LOGFILE "* Makedistr: beginning remote tar on ics-sparc1 ..\n";
  close LOGFILE;
  my $remove1 = `\\rm $autodir/release/database.$dbname.*.tar 2>/dev/null`;
  my $remove2 = `\\rm $autodir/release/database.$dbname.*.tar.Z 2>/dev/null`;
