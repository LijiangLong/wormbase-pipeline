our ($WS_version,$WS_previous);
$WS_version = &get_WS_version;
my $scriptdir  = "/wormsrv2/scripts";                                            # specify location of scripts

our $logfile = "/wormsrv2/logs/autoace_minder.WS${WS_version}.${rundate}";
