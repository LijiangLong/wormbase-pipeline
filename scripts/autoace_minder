    system ("$scriptdir/inherit_GO_terms.pl -m") && die "Couldn't run inherit_GO_terms.pl\n";
    print LOG " Assign GO terms based on Interpro motifs for$WS_version\n";
    print LOG " =>'inherit_GO_terms.pl'\n\n";

}
