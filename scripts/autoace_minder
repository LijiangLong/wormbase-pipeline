	     'D3'  => 'D3:Add_protein_data_to_autoace',
	     'D4'  => 'D4:Build_wormrna',
	     'Z1'  => 'Z1:Make_autoace_complete'
	     );


our @chrom = ('I','II','III','IV','V','X');

our $logdir     = "/wormsrv2/autoace/logs";
