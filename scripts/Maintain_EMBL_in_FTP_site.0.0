$ftppath = "/nfs/disk69/ftp/pub2/wormbase/sequences/EMBL_FORMAT";
my $maintainer = "ag3\@sanger.ac.uk";
my $logfile = "/wormsrv2/logs/Maintain_EMBL_in_FTP_site.log.$$";
