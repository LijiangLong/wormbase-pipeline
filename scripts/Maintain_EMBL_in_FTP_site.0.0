####################################################
# Build the hash for associating chromosome<>clone #
####################################################
#
# Map clones to chromosomes
#
sub map_Chromes {
 $db = Ace->connect(-path=>'/wormsrv2/autoace') or &DieHard ("Could not connect to autoace");
 print LOG "\n\nFirst database connection successful\n\n";
  my ($query1);
  my ($query2);
  my (%CHROME);
  undef %CHROME;
  my ($map);
  $query1=<<END;
find genome_sequence *
show -a Interpolated_gMap
END
  $query2=<<END3;
quit
END3
 my $t=$db->raw_query($query1);
 my $t=$db->raw_query($query2);
 @text = split /\n/, $t;
 foreach (@text) {
   if (/^Sequence\s+:\s+\"(\w+)\"/)  {
      $sequence=$1;
   }
   if (/^Interpolated_gMap\s+\"(\S+)\"\s+/)  {
      $map=$1;
      $CHROME{$sequence}=$map;
      print LOG "$sequence $CHROME{$sequence}\n";
   }
 }
}
#
#Retrieve accession numbers
#
sub retr_AC {
$db = Ace->connect(-path=>'/wormsrv2/autoace') or &DieHard("Could not connect to autoace");
print LOG "\nDatabase connection successful\n\n";
open (DTFILE,">$dtfile");
# For every genome sequence in autoace ..
$i = $db->fetch_many(Genome_Sequence, "*");  
while ($obj = $i->next) {
   undef $mapping;
   $project = $obj;
   $sequence = ${project};
   $mapping = $CHROME{$sequence};
   chomp $mapping;
# .. skip sequences without DB_info ..
   $status = $obj->at('DB_info');
   if ($status eq "") {
    print LOG "** Warning: $sequence has NO DB INFO \n\n";
    next;
   }
# .. skip sequences without DNA ..
   $dna = $obj->DNA;
   if ($dna eq "") {
    print LOG " ** Warning: $sequence has NO DNA \n\n";
    next;
   }
# .. skip sequences where species is not C.elegans
   $species = $obj->Species;
   if ($species ne "Caenorhabditis elegans") { next; }
# .. retrieve and store database information; skip sequences without AC
   ($db_info,$tag,$db,$db_ID,$db_AC,$version) = $obj->DB_info->row();
   print LOG "$tag,$db,$db_ID,$db_AC,$version\n";
   $db_AC =~ s/\s+//mg;
   chomp $db_AC;
   if ($db_AC eq "") {
    print LOG " ** Warning : $sequence has no AC\n"; 
    next;
   }
   undef $embl;
   $embl=`/usr/local/pubseq/bin/getz \'[EMBLNEW-acc:$db_AC]\'`;
   if ($embl eq "") {
         $embl=`/usr/local/pubseq/bin/getz \'[EMBL-acc:$db_AC]\'`; 
     }
   chomp $embl;
if ($embl eq "") {
    print LOG "Entry $db_AC is not represented in EMBL\n";
    next;
   }
   print DTFILE "$embl\n"; 
}
close DTFILE;
open (DTFILE2,">$dtfile2") or die ("Could not open $dtfile2");
open (DTLINE,"/usr/local/pubseq/bin/getz -f id -f crlu \@$dtfile |");
   while (<DTLINE>) {
     $line =$_;
     chomp $line;
     print DTFILE2 "$line\n";
     if ($line =~ /^ID\s+(\w+)\s+/) {
	 $key=$1;
     }
     if ($line =~ /^DT/) {
	 $DT{$key}.="$line\n";
     }
   }
close (DTLINE);
close DTFILE2;
unlink $dtfile;
}

#
# Retrieve the differences
#
